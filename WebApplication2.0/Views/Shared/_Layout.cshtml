<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kats Productions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<nav class="navbar navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Web Applicatie 2.0", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-nav id=" navbarSupportedContent"">
				<ul class="nav navbar-nav">
					<li class="nav-item">@Html.ActionLink("Home", "Index", "Home")</li>
					<li class="nav-item">@Html.ActionLink("About", "About", "Home")</li>
					<li class="nav-item">@Html.ActionLink("Koppelingen", "Start", "Koppel")</li>
				</ul>
			</div>
			<div class="nav navbar-nav navbar-right">
				<ul class="nav navbar-nav">
					<li class="nav-item">
						<a href="Register">Register</a>
					</li>
					<li class="nav-item">
						<a href="Register">LogOut</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>


	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Kats Productions</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
